{
  "name": "airstream",
  "version": "0.1.0",
  "description": "a simple social network",
  "repository": "https://github.com/daniellmb/airstream",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.10",
    "protractor": "^1.1.1",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "npm install",
    "start": "http-server -a localhost -p 8000 -c-1",

    "pretest": "npm install",
    "test": "karma start angular/test/karma.conf.js",
    "test-single-run": "karma start angular/test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor angular/test/e2e/protractor.conf.js"

  }
}
